{
  "name": "development-dashboard",
  "description": "Electron app to manage and run development services",
  "author": "turzo",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "electron-store": "^8.2.0",
    "tree-kill": "^1.2.2",
    "xterm": "^5.3.0"
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.turzo.development-dashboard",
    "productName": "Development Dashboard",
    "directories": { "output": "dist" },
    "files": ["**/*", "!node_modules/**/*", "!dist/**/*", "!*.log"],
    "win": { "target": "nsis", "forceCodeSigning": false }
  }
}
